{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Inventory Schema",
  "description": "Schema for validating inventory data from ProHandel API",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the inventory record"
    },
    "branchNumber": {
      "type": ["number", "string", "null"],
      "description": "Branch number where the inventory is located"
    },
    "supplierNumber": {
      "type": ["number", "string", "null"],
      "description": "Supplier number for the inventory"
    },
    "shopNumber": {
      "type": ["number", "string", "null"],
      "description": "Shop number for the inventory"
    },
    "categoryNumber": {
      "type": ["number", "string", "null"],
      "description": "Category number of the inventory"
    },
    "active": {
      "type": ["boolean", "null"],
      "description": "Whether the inventory is active"
    },
    "date": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Date of the inventory record"
    },
    "stocktakingDate": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Date of the last stocktaking"
    },
    "type": {
      "type": ["number", "string", "null"],
      "description": "Type of the inventory record"
    },
    "lastChange": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Last change timestamp of the inventory record"
    },
    "isDeleted": {
      "type": ["boolean", "null"],
      "description": "Whether the inventory record is deleted"
    }
  },
  "required": ["id"],
  "additionalProperties": true
}
