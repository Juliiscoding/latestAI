{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Order Position Schema",
  "description": "Schema for validating order position data from ProHandel API",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the order position"
    },
    "orderNumber": {
      "type": ["number", "string", "null"],
      "description": "Order number"
    },
    "articleNumber": {
      "type": ["number", "string", "null"],
      "description": "Article number"
    },
    "branchNumber": {
      "type": ["number", "string", "null"],
      "description": "Branch number"
    },
    "sizeGroupNumber": {
      "type": ["number", "string", "null"],
      "description": "Size group number"
    },
    "sizeGroupPosition": {
      "type": ["number", "string", "null"],
      "description": "Position in the size group"
    },
    "size": {
      "type": ["string", "null"],
      "description": "Size of the article"
    },
    "originalEAN": {
      "type": ["number", "string", "null"],
      "description": "Original EAN code"
    },
    "purchasePrice": {
      "type": ["number", "null"],
      "description": "Purchase price"
    },
    "netPurchasePrice": {
      "type": ["number", "null"],
      "description": "Net purchase price"
    },
    "ean": {
      "type": ["number", "string", "null"],
      "description": "EAN code"
    },
    "isConsignment": {
      "type": ["boolean", "null"],
      "description": "Whether it's a consignment"
    },
    "deliveredAmount": {
      "type": ["number", "null"],
      "description": "Amount delivered"
    },
    "orderAmount": {
      "type": ["number", "null"],
      "description": "Amount ordered"
    },
    "backlogAmount": {
      "type": ["number", "null"],
      "description": "Amount in backlog"
    },
    "status": {
      "type": ["number", "string", "null"],
      "description": "Status of the order position"
    },
    "salePrice": {
      "type": ["number", "null"],
      "description": "Sale price"
    },
    "labelPrice": {
      "type": ["number", "null"],
      "description": "Label price"
    },
    "distributionStatus": {
      "type": ["number", "string", "null"],
      "description": "Distribution status"
    },
    "distributedAmount": {
      "type": ["number", "null"],
      "description": "Amount distributed"
    },
    "lastChange": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Last change timestamp"
    },
    "isDeleted": {
      "type": ["boolean", "null"],
      "description": "Whether it's deleted"
    }
  },
  "required": ["id"],
  "additionalProperties": true
}
