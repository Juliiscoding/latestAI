{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Invoice Schema",
  "description": "Schema for validating invoice data from ProHandel API",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the invoice"
    },
    "number": {
      "type": ["number", "string", "null"],
      "description": "Invoice number"
    },
    "branchNumber": {
      "type": ["number", "string", "null"],
      "description": "Branch number where the invoice was issued"
    },
    "customerNumber": {
      "type": ["number", "string", "null"],
      "description": "Customer number associated with the invoice"
    },
    "currencyNumber": {
      "type": ["string", "null"],
      "description": "Currency number of the invoice"
    },
    "receiptNumber": {
      "type": ["number", "string", "null"],
      "description": "Receipt number associated with the invoice"
    },
    "receiptPosition": {
      "type": ["number", "string", "null"],
      "description": "Position on the receipt"
    },
    "date": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Date when the invoice was issued"
    },
    "paymentDueDate": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Date when the payment is due"
    },
    "staffNumber": {
      "type": ["number", "string", "null"],
      "description": "Staff number who issued the invoice"
    },
    "cashRegisterNumber": {
      "type": ["number", "string", "null"],
      "description": "Cash register number where the invoice was issued"
    },
    "status": {
      "type": ["number", "string", "null"],
      "description": "Status of the invoice"
    },
    "amount": {
      "type": ["number", "null"],
      "description": "Amount of the invoice"
    },
    "amountCleared": {
      "type": ["number", "null"],
      "description": "Amount of the invoice that has been cleared"
    },
    "paymentConditionNumber": {
      "type": ["number", "string", "null"],
      "description": "Payment condition number"
    },
    "lastChange": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Last change timestamp of the invoice"
    },
    "isDeleted": {
      "type": ["boolean", "null"],
      "description": "Whether the invoice is deleted"
    }
  },
  "required": ["id"],
  "additionalProperties": true
}
