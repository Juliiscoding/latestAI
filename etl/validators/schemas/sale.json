{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sale Schema",
  "description": "Schema for validating sale data from ProHandel API",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the sale"
    },
    "articleNumber": {
      "type": ["number", "string", "null"],
      "description": "Article number of the sold item"
    },
    "branchNumber": {
      "type": ["number", "string", "null"],
      "description": "Branch number where the sale occurred"
    },
    "articleSizeNumber": {
      "type": ["number", "string", "null"],
      "description": "Article size number of the sold item"
    },
    "customerNumber": {
      "type": ["number", "string", "null"],
      "description": "Customer number of the buyer"
    },
    "currencyNumber": {
      "type": ["string", "null"],
      "description": "Currency number of the sale"
    },
    "countryNumber": {
      "type": ["string", "null"],
      "description": "Country number of the sale"
    },
    "staffNumber": {
      "type": ["number", "string", "null"],
      "description": "Staff number who processed the sale"
    },
    "receiptNumber": {
      "type": ["number", "string", "null"],
      "description": "Receipt number of the sale"
    },
    "date": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Date of the sale"
    },
    "purchasePrice": {
      "type": ["number", "null"],
      "description": "Purchase price of the sold item"
    },
    "cashierNumber": {
      "type": ["number", "string", "null"],
      "description": "Cashier number who processed the sale"
    },
    "discount": {
      "type": ["number", "null"],
      "description": "Discount applied to the sale"
    },
    "cashRegisterNumber": {
      "type": ["number", "string", "null"],
      "description": "Cash register number used for the sale"
    },
    "deduction": {
      "type": ["number", "null"],
      "description": "Deduction applied to the sale"
    },
    "zipCode": {
      "type": ["string", "null"],
      "description": "Zip code of the customer"
    },
    "staffDiscount": {
      "type": ["number", "null"],
      "description": "Staff discount applied to the sale"
    },
    "receiptPosition": {
      "type": ["number", "string", "null"],
      "description": "Position on the receipt"
    },
    "priceChangeReasonNumber": {
      "type": ["number", "string", "null"],
      "description": "Reason number for price change"
    },
    "returnReasonNumber": {
      "type": ["number", "string", "null"],
      "description": "Reason number for return"
    },
    "quantity": {
      "type": ["number", "null"],
      "description": "Quantity of items sold"
    },
    "salePrice": {
      "type": ["number", "null"],
      "description": "Sale price of the item"
    },
    "labelPrice": {
      "type": ["number", "null"],
      "description": "Label price of the item"
    },
    "paymentOptionNumber": {
      "type": ["number", "string", "null"],
      "description": "Payment option number used"
    },
    "time": {
      "type": ["number", "string", "null"],
      "description": "Time of the sale"
    },
    "type": {
      "type": ["number", "string", "null"],
      "description": "Type of the sale"
    },
    "alternativeReceiptNumber": {
      "type": ["string", "null"],
      "description": "Alternative receipt number"
    },
    "lastChange": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Last change timestamp of the sale"
    },
    "isDeleted": {
      "type": ["boolean", "null"],
      "description": "Whether the sale is deleted"
    }
  },
  "required": ["id"],
  "additionalProperties": true
}
