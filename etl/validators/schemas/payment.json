{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Payment Schema",
  "description": "Schema for validating payment data from ProHandel API",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the payment"
    },
    "number": {
      "type": ["number", "string", "null"],
      "description": "Payment number"
    },
    "branchNumber": {
      "type": ["number", "string", "null"],
      "description": "Branch number where the payment was made"
    },
    "customerNumber": {
      "type": ["number", "string", "null"],
      "description": "Customer number associated with the payment"
    },
    "currencyNumber": {
      "type": ["string", "null"],
      "description": "Currency number of the payment"
    },
    "receiptNumber": {
      "type": ["number", "string", "null"],
      "description": "Receipt number associated with the payment"
    },
    "receiptPosition": {
      "type": ["number", "string", "null"],
      "description": "Position on the receipt"
    },
    "date": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Date when the payment was made"
    },
    "invoiceDate": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Date of the invoice"
    },
    "staffNumber": {
      "type": ["number", "string", "null"],
      "description": "Staff number who processed the payment"
    },
    "cashRegisterNumber": {
      "type": ["number", "string", "null"],
      "description": "Cash register number where the payment was made"
    },
    "status": {
      "type": ["number", "string", "null"],
      "description": "Status of the payment"
    },
    "amount": {
      "type": ["number", "null"],
      "description": "Amount of the payment"
    },
    "lastChange": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Last change timestamp of the payment"
    },
    "isDeleted": {
      "type": ["boolean", "null"],
      "description": "Whether the payment is deleted"
    }
  },
  "required": ["id"],
  "additionalProperties": true
}
