{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Branch Schema",
  "description": "Schema for validating branch data from ProHandel API",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the branch"
    },
    "number": {
      "type": ["number", "string", "null"],
      "description": "Branch number"
    },
    "name1": {
      "type": ["string", "null"],
      "description": "Primary name of the branch"
    },
    "name2": {
      "type": ["string", "null"],
      "description": "Secondary name of the branch"
    },
    "name3": {
      "type": ["string", "null"],
      "description": "Tertiary name of the branch"
    },
    "searchTerm": {
      "type": ["string", "null"],
      "description": "Search term for the branch"
    },
    "street": {
      "type": ["string", "null"],
      "description": "Street address of the branch"
    },
    "zipCode": {
      "type": ["string", "null"],
      "description": "Zip code of the branch"
    },
    "city": {
      "type": ["string", "null"],
      "description": "City of the branch"
    },
    "countryNumber": {
      "type": ["string", "null"],
      "description": "Country number of the branch"
    },
    "telephone": {
      "type": ["string", "null"],
      "description": "Telephone number of the branch"
    },
    "fax": {
      "type": ["string", "null"],
      "description": "Fax number of the branch"
    },
    "email": {
      "type": ["string", "null"],
      "description": "Email address of the branch"
    },
    "website": {
      "type": ["string", "null"],
      "description": "Website of the branch"
    },
    "isActive": {
      "type": ["boolean", "null"],
      "description": "Whether the branch is active"
    },
    "isHeadquarter": {
      "type": ["boolean", "null"],
      "description": "Whether the branch is the headquarters"
    },
    "isWarehouse": {
      "type": ["boolean", "null"],
      "description": "Whether the branch is a warehouse"
    },
    "lastChange": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Last change timestamp of the branch"
    },
    "isDeleted": {
      "type": ["boolean", "null"],
      "description": "Whether the branch is deleted"
    }
  },
  "required": ["id"],
  "additionalProperties": true
}
