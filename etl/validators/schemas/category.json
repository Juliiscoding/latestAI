{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Category Schema",
  "description": "Schema for validating category data from ProHandel API",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the category"
    },
    "number": {
      "type": ["number", "string", "null"],
      "description": "Category number"
    },
    "name": {
      "type": ["string", "null"],
      "description": "Name of the category"
    },
    "searchTerm": {
      "type": ["string", "null"],
      "description": "Search term for the category"
    },
    "departmentNumber": {
      "type": ["number", "string", "null"],
      "description": "Department number"
    },
    "labelNumber": {
      "type": ["number", "string", "null"],
      "description": "Label number"
    },
    "mainDepartmentNumber": {
      "type": ["number", "string", "null"],
      "description": "Main department number"
    },
    "mainCategoryNumber": {
      "type": ["number", "string", "null"],
      "description": "Main category number"
    },
    "generalCategoryNumber": {
      "type": ["number", "string", "null"],
      "description": "General category number"
    },
    "taxNumber": {
      "type": ["number", "string", "null"],
      "description": "Tax number"
    },
    "isServiceCategory": {
      "type": ["boolean", "null"],
      "description": "Whether it's a service category"
    },
    "lastChange": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Last change timestamp of the category"
    },
    "isDeleted": {
      "type": ["boolean", "null"],
      "description": "Whether the category is deleted"
    }
  },
  "required": ["id"],
  "additionalProperties": true
}
