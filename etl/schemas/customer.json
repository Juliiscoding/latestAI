{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Customer Schema",
  "description": "Schema for validating customer data from the ProHandel API",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the customer"
    },
    "number": {
      "type": "integer",
      "description": "Customer number"
    },
    "name1": {
      "type": "string",
      "description": "Primary name of the customer"
    },
    "name2": {
      "type": ["string", "null"],
      "description": "Secondary name of the customer"
    },
    "name3": {
      "type": ["string", "null"],
      "description": "Tertiary name of the customer"
    },
    "searchTerm": {
      "type": ["string", "null"],
      "description": "Search term for the customer"
    },
    "revenue": {
      "type": ["number", "null"],
      "description": "Customer revenue"
    },
    "bonusValue": {
      "type": ["number", "null"],
      "description": "Customer bonus value"
    },
    "loyalityPoints": {
      "type": ["integer", "null"],
      "description": "Customer loyalty points"
    },
    "lastChange": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Date of last change"
    },
    "isDeleted": {
      "type": "boolean",
      "description": "Whether the customer is deleted"
    }
  },
  "required": ["id", "number", "name1"],
  "additionalProperties": true
}
